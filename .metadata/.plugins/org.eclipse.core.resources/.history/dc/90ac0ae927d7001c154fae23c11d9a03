apiVersion: apps/v1
kind: Deployment
metadata:
  name: accesslibrary
  namespace: default
  labels:
    app: accesslibrary
spec:
  replicas: 3
  selector:
    matchLabels:
      app: accesslibrary
  template:
    metadata:
      labels:
        app: accesslibrary
    spec:
      containers:
        - name: accesslibrary
          image: isabyasachi/lms-accesslibrary:0.0.11-SNAPSHOT
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 8082
          env:
            - name: SPRING_DATASOURCE_URL
              valueFrom:
                configMapKeyRef:
                  name: mysql-configmap
                  key: database_url
            - name: SPRING_DATASOURCE_USERNAME
              valueFrom:
                secretKeyRef:
                  key: mysql-user-username
                  name: mysql-secret
            - name: SPRING_DATASOURCE_PASSWORD
              valueFrom:
                secretKeyRef:
                  key: mysql-user-password
                  name: mysql-secret
---
apiVersion: v1
kind: Service
metadata:
  name: accesslibrary-service
  namespace: default
spec:
  selector:
    app: accesslibrary
  type: LoadBalancer
  ports:
    - protocol: TCP
      port: 8082
      targetPort: 8082
      nodePort: 30001
---
apiVersion: v1
kind: Service
metadata:
  name: mysql-service
  namespace: accesslibrary-project
spec:
  ports:
    - port: 3306
  selector:
    app: mysql
  clusterIP: None